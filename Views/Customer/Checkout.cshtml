@model GameTopupStore.Models.Cart
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="customer-card">
    <div class="customer-card-header">
        <h4><i class="fas fa-credit-card"></i> Checkout Pesanan</h4>
        <a asp-action="Cart" class="btn btn-admin-secondary">
            <i class="fas fa-arrow-left"></i> Kembali ke Keranjang
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <h5><i class="fas fa-box"></i> Ringkasan Pesanan</h5>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Game Topup</th>
                            <th class="text-center">Jumlah</th>
                            <th class="text-end">Harga</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.GameTopupName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">Rp @item.Price.ToString("N0")</td>
                                <td class="text-end">Rp @((item.Price * item.Quantity).ToString("N0"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-active">
                            <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-end">
                                <h5 class="text-success mb-0">
                                    Rp @Model.Items.Sum(i => i.Price * i.Quantity).ToString("N0")
                                </h5>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <h5 class="mt-4"><i class="fas fa-gamepad"></i> Informasi Game Account</h5>
            <form method="post" asp-action="PlaceOrder" id="checkoutForm">
                <div class="mb-3">
                    <label class="form-label">Game Account ID/Username *</label>
                    <input type="text" name="gameAccount" id="gameAccount" class="form-control" 
                        placeholder="Masukkan ID atau Username game Anda" required />
                    <small class="text-muted">Pastikan ID/Username game Anda benar</small>
                </div>
                <div class="mb-3">
                    <label class="form-label">Server *</label>
                    <input type="text" name="server" id="server" class="form-control" 
                        placeholder="Contoh: Indonesia, Global, Asia" required />
                    <small class="text-muted">Masukkan server game Anda</small>
                </div>

                <h5 class="mt-4"><i class="fas fa-qrcode"></i> Metode Pembayaran</h5>
                <div class="mb-3">
                    <div class="card" style="border: 3px solid var(--game-cyan); background: rgba(0, 217, 255, 0.1);">
                        <div class="card-body">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="qris" value="QRIS" checked disabled>
                                <label class="form-check-label" for="qris" style="color: var(--game-cyan); font-weight: bold;">
                                    <i class="fas fa-qrcode"></i> QRIS (Quick Response Code Indonesian Standard)
                                    <span class="badge bg-success ms-2">Hanya Metode Ini</span>
                                </label>
                            </div>
                            <small class="text-muted d-block mt-2">
                                <i class="fas fa-info-circle"></i> Scan QR code untuk pembayaran instan via e-wallet (GoPay, OVO, DANA, LinkAja) atau mobile banking
                            </small>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Setelah konfirmasi, Anda akan diarahkan ke halaman pembayaran QRIS.
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-pirate btn-lg">
                        <i class="fas fa-qrcode"></i> Lanjutkan ke Pembayaran QRIS
                    </button>
                    <a asp-action="Cart" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Batal
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-receipt"></i> Total Pembayaran</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <td>Subtotal:</td>
                            <td class="text-end">Rp @Model.Items.Sum(i => i.Price * i.Quantity).ToString("N0")</td>
                        </tr>
                        <tr>
                            <td>Biaya Admin:</td>
                            <td class="text-end text-success">GRATIS</td>
                        </tr>
                        <tr class="table-active">
                            <td><strong>Total:</strong></td>
                            <td class="text-end">
                                <h4 class="text-success mb-0">
                                    Rp @Model.Items.Sum(i => i.Price * i.Quantity).ToString("N0")
                                </h4>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>