@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GameTopupStore - Topup Game Terpercaya</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --game-dark: #0a0e27;
            --game-darker: #050811;
            --game-cyan: #00d9ff;
            --game-purple: #8b5cf6;
            --game-pink: #ec4899;
            --game-green: #10b981;
            --game-gold: #fbbf24;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--game-dark);
            overflow-x: hidden;
            height: 100%;
            width: 100%;
        }

        /* Navbar */
        .navbar-custom {
            background: linear-gradient(90deg, var(--game-dark) 0%, #1a1a2e 100%);
            padding: 15px 0;
            box-shadow: 0 4px 10px rgba(0, 217, 255, 0.3);
            border-bottom: 3px solid var(--game-cyan);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--game-cyan) !important;
            text-shadow: 0 0 15px rgba(0, 217, 255, 0.8), 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            margin: 0 10px;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: var(--game-cyan) !important;
            text-shadow: 0 0 8px rgba(0, 217, 255, 0.6);
        }

        .btn-nav {
            margin: 0 5px;
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-login {
            background: transparent;
            border: 2px solid var(--game-cyan);
            color: var(--game-cyan);
        }

        .btn-login:hover {
            background: var(--game-cyan);
            color: var(--game-dark);
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.6);
        }

        .btn-register {
            background: linear-gradient(135deg, var(--game-purple) 0%, var(--game-pink) 100%);
            border: 2px solid var(--game-cyan);
            color: white;
            box-shadow: 0 0 15px rgba(139, 92, 246, 0.4);
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(139, 92, 246, 0.6), 0 0 25px rgba(0, 217, 255, 0.4);
        }

        /* Hero Section - FULL DARK */
        .hero-section {
            background: linear-gradient(135deg, var(--game-dark) 0%, var(--game-darker) 50%, #1a1a2e 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 80px 20px;
        }

        .hero-icon {
            font-size: 6rem;
            color: var(--game-cyan);
            margin-bottom: 30px;
            animation: floatAnimation 3s ease-in-out infinite;
            text-shadow: 0 0 30px rgba(0, 217, 255, 0.8);
        }

        @@keyframes floatAnimation {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: bold;
            color: var(--game-cyan);
            margin-bottom: 20px;
            text-shadow: 0 0 30px rgba(0, 217, 255, 0.8), 3px 3px 6px rgba(0, 0, 0, 0.7);
        }

        .hero-subtitle {
            font-size: 1.3rem;
            color: var(--game-gold);
            margin-bottom: 40px;
            text-shadow: 0 0 15px rgba(251, 191, 36, 0.6);
        }

        .hero-buttons .btn {
            margin: 10px;
            padding: 15px 40px;
            font-size: 1.1rem;
            border-radius: 30px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-hero-primary {
            background: linear-gradient(135deg, var(--game-purple) 0%, var(--game-pink) 100%);
            color: white;
            border: 2px solid var(--game-cyan);
            box-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
        }

        .btn-hero-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(139, 92, 246, 0.7), 0 0 35px rgba(0, 217, 255, 0.5);
            color: white;
        }

        .btn-hero-secondary {
            background: transparent;
            color: var(--game-cyan);
            border: 2px solid var(--game-cyan);
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.4);
        }

        .btn-hero-secondary:hover {
            background: var(--game-cyan);
            color: var(--game-dark);
            box-shadow: 0 0 25px rgba(0, 217, 255, 0.8);
        }

        /* Features Section */
        .features-section {
            padding: 80px 20px;
            background: var(--game-dark);
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--game-cyan);
            text-align: center;
            margin-bottom: 60px;
            text-shadow: 0 0 25px rgba(0, 217, 255, 0.8), 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .feature-card {
            background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(10, 14, 39, 0.9) 100%);
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            box-shadow: 0 5px 25px rgba(0, 217, 255, 0.3);
            transition: all 0.3s ease;
            height: 100%;
            border: 3px solid var(--game-cyan);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 45px rgba(0, 217, 255, 0.5);
            border-color: var(--game-purple);
        }

        .feature-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            color: var(--game-cyan);
            text-shadow: 0 0 20px rgba(0, 217, 255, 0.8);
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--game-cyan);
            margin-bottom: 15px;
            text-shadow: 0 0 15px rgba(0, 217, 255, 0.6);
        }

        .feature-desc {
            color: #ccc;
            line-height: 1.6;
        }

        /* Footer */
        .footer {
            background: linear-gradient(90deg, var(--game-dark) 0%, #1a1a2e 100%);
            color: white;
            padding: 40px 20px 20px;
            border-top: 4px solid var(--game-cyan);
            box-shadow: 0 -4px 10px rgba(0, 217, 255, 0.2);
        }

        .footer-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--game-cyan);
            margin-bottom: 10px;
            text-shadow: 0 0 20px rgba(0, 217, 255, 0.8);
        }

        .footer-text {
            color: var(--game-gold);
            margin-bottom: 20px;
            text-shadow: 0 0 10px rgba(251, 191, 36, 0.6);
        }

        .footer-links a {
            color: white;
            margin: 0 15px;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-links a:hover {
            color: var(--game-cyan);
            text-shadow: 0 0 10px rgba(0, 217, 255, 0.8);
        }

        .footer-bottom {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid rgba(0, 217, 255, 0.2);
            color: #999;
        }

        .footer-quote {
            color: var(--game-gold);
            font-style: italic;
            margin-top: 10px;
            text-shadow: 0 0 10px rgba(251, 191, 36, 0.6);
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1rem;
            }

            .section-title {
                font-size: 1.8rem;
            }
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-gamepad"></i> GameTopupStore
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Beranda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Customer" asp-action="Catalog">Katalog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Tentang</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-nav btn-login">
                        <i class="fas fa-sign-in-alt"></i> Masuk
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-nav btn-register">
                        <i class="fas fa-user-plus"></i> Daftar
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section" id="home">
        <div class="text-center">
            <div class="hero-icon">
                <i class="fas fa-gamepad"></i>
            </div>
            <h1 class="hero-title">🎮 Selamat Datang di GameTopupStore! 🎮</h1>
            <p class="hero-subtitle">
                Topup game favoritmu dengan mudah dan cepat! Level up sekarang!
            </p>
            <div class="hero-buttons">
                <a asp-controller="Customer" asp-action="Catalog" class="btn btn-hero-primary">
                    <i class="fas fa-gamepad"></i> Jelajahi Katalog
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-hero-secondary">
                    <i class="fas fa-user-plus"></i> Gabung Sekarang
                </a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section" id="features">
        <div class="container">
            <h2 class="section-title">🎮 Kenapa Memilih GameTopupStore? 🎮</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-gamepad"></i>
                        </div>
                        <h3 class="feature-title">🎯 Game Lengkap</h3>
                        <p class="feature-desc">
                            Topup untuk berbagai game populer: Mobile Legends, PUBG, Free Fire, dan banyak lagi!
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-bolt"></i>
                        </div>
                        <h3 class="feature-title">⚡ Proses Instan</h3>
                        <p class="feature-desc">
                            Topup langsung masuk ke akun game Anda dalam hitungan menit! Cepat dan mudah!
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h3 class="feature-title">🔒 Aman & Terpercaya</h3>
                        <p class="feature-desc">
                            Transaksi aman dengan sistem pembayaran terpercaya. Data Anda terlindungi!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <div class="footer-brand">
                <i class="fas fa-gamepad"></i> GameTopupStore
            </div>
            <p class="footer-text">
                🎮 Level Up Your Game! 🎮
            </p>
            <div class="footer-links">
                <a href="#home">Beranda</a>
                <a asp-controller="Customer" asp-action="Catalog">Katalog</a>
                <a href="#features">Tentang</a>
                <a asp-controller="Account" asp-action="Login">Masuk</a>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 GameTopupStore. All Rights Reserved.</p>
                <p class="footer-quote">
                    "Level Up Your Game!" - GameTopupStore 🎮
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>