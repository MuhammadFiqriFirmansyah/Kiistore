@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="admin-card text-center" style="border-color: var(--game-cyan);">
            <i class="fas fa-gamepad fa-3x mb-3" style="color: var(--game-cyan);"></i>
            <h2 class="mb-1">@ViewBag.TotalTopups</h2>
            <p class="text-muted mb-0">Total Game Topup</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="admin-card text-center" style="border-color: var(--game-purple);">
            <i class="fas fa-shopping-cart fa-3x mb-3" style="color: var(--game-purple);"></i>
            <h2 class="mb-1">@ViewBag.TotalOrders</h2>
            <p class="text-muted mb-0">Total Pesanan</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="admin-card text-center" style="border-color: var(--game-pink);">
            <i class="fas fa-users fa-3x mb-3" style="color: var(--game-pink);"></i>
            <h2 class="mb-1">@ViewBag.TotalUsers</h2>
            <p class="text-muted mb-0">Total Customer</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="admin-card text-center" style="border-color: var(--game-gold);">
            <i class="fas fa-clock fa-3x mb-3" style="color: var(--game-gold);"></i>
            <h2 class="mb-1">@ViewBag.PendingOrders</h2>
            <p class="text-muted mb-0">Pesanan Pending</p>
        </div>
    </div>
</div>

<div class="admin-card">
    <div class="admin-card-header">
        <h4><i class="fas fa-tachometer-alt"></i> Selamat Datang di Admin Panel!</h4>
    </div>
    <p class="lead">Gunakan menu di sidebar untuk mengelola sistem GameTopupStore. ðŸŽ®</p>
    <div class="row mt-4">
        <div class="col-md-4">
            <a asp-action="Topups" class="btn btn-admin-primary w-100 mb-2">
                <i class="fas fa-gamepad"></i> Kelola Game Topup
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="SeedData" class="btn btn-success w-100 mb-2" onclick="return confirm('Yakin ingin membuat data sample? Ini akan membuat 30+ game topup untuk MLBB, HOK, AOV, PUBG, Free Fire, Roblox, dan COC dengan gambar.')">
                <i class="fas fa-seedling"></i> Buat Data Sample
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="Orders" class="btn btn-admin-primary w-100 mb-2">
                <i class="fas fa-shopping-cart"></i> Kelola Pesanan
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="Users" class="btn btn-admin-primary w-100 mb-2">
                <i class="fas fa-users"></i> Kelola User
            </a>
        </div>
    </div>
</div>